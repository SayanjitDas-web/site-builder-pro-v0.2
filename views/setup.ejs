<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Setup - SiteBuilder Pro</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-xl shadow-2xl w-full max-w-md">
        <div class="text-center mb-8">
            <div
                class="w-16 h-16 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-3xl mx-auto mb-4">
                <i class="fa-solid fa-rocket"></i>
            </div>
            <h1 class="text-2xl font-bold text-gray-800">Welcome to SiteBuilder Pro</h1>
            <p class="text-gray-500 mt-2">Let's configure your CMS.</p>
        </div>

        <form id="setupForm" class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Site Title</label>
                <input type="text" id="siteTitle" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none"
                    placeholder="My Awesome Website">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">MongoDB Connection URI</label>
                <input type="text" id="mongoUri" required
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none"
                    placeholder="mongodb://localhost:27017/sitebuilder">
                <p class="text-xs text-gray-500 mt-1">Connection string for your database.</p>
            </div>

            <div class="border-t border-gray-100 pt-4">
                <h3 class="text-sm font-bold text-gray-900 mb-3">ImageKit Storage (Optional but Recommended)</h3>
                <div class="space-y-3">
                    <div>
                        <label class="block text-xs font-medium text-gray-700 mb-1">Public Key</label>
                        <input type="text" id="ikPublic" placeholder="public_..."
                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none">
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-700 mb-1">Private Key</label>
                        <input type="password" id="ikPrivate" placeholder="private_..."
                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none">
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-gray-700 mb-1">URL Endpoint</label>
                        <input type="text" id="ikUrl" placeholder="https://ik.imagekit.io/your_id"
                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none">
                    </div>
                </div>
            </div>

            <div class="border-t pt-4 mt-4">
                <h3 class="font-semibold text-gray-700 mb-3">Admin Account</h3>
                <div class="space-y-3">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                        <input type="email" id="adminEmail" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none"
                            placeholder="admin@example.com">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                        <input type="password" id="adminPassword" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none"
                            placeholder="••••••••">
                    </div>
                </div>
            </div>

            <button type="submit"
                class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 rounded-lg transition shadow-lg mt-6">
                Complete Setup
            </button>
        </form>

        <div id="statusMessage" class="mt-4 text-center text-sm hidden"></div>
    </div>

    <script>
        document.getElementById('setupForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const btn = e.target.querySelector('button');
            const status = document.getElementById('statusMessage');

            btn.disabled = true;
            btn.innerHTML = '<i class="fa-solid fa-circle-notch fa-spin mr-2"></i> Configuring...';
            status.classList.add('hidden');

            const data = {
                siteTitle: document.getElementById('siteTitle').value,
                mongoUri: document.getElementById('mongoUri').value,
                email: document.getElementById('adminEmail').value,
                password: document.getElementById('adminPassword').value,
                ikPublic: document.getElementById('ikPublic').value,
                ikPrivate: document.getElementById('ikPrivate').value,
                ikUrl: document.getElementById('ikUrl').value
            };

            try {
                const res = await fetch('/api/setup', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await res.json();

                if (res.ok) {
                    status.innerHTML = `<span class="text-green-600 font-bold"><i class="fa-solid fa-check mr-2"></i> Setup Complete! Redirecting...</span>`;
                    status.classList.remove('hidden');
                    setTimeout(() => window.location.href = '/login', 2000);
                } else {
                    throw new Error(result.msg || 'Setup failed');
                }
            } catch (err) {
                status.innerHTML = `<span class="text-red-600 font-bold"><i class="fa-solid fa-triangle-exclamation mr-2"></i> ${err.message}</span>`;
                status.classList.remove('hidden');
                btn.disabled = false;
                btn.innerText = 'Complete Setup';
            }
        });
    </script>
</body>

</html>